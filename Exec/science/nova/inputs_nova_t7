# In two dimensions, please coment the previous two options
# and use:
# amr.max_grid_size   = 256
# amr.blocking_factor = 64

amr.n_error_buf     = 2 2         # number of buffer cells in error est
amr.refine_grid_layout = 0


# CHECKPOINT FILES
amr.check_file      = chk        # root name of checkpoint file
amr.check_per       = 0.5        # size of timestep between checkpoints

# PLOTFILES
amr.plot_file        = plt        # root name of plotfile
amr.plot_per         = 0.5        # set a plot every half second
amr.derive_plot_vars = ALL

# DATA LOG
amr.data_log = log

# problem initialization

problem.model_name =  "glasner_T7.hse.dx10000.00cm"

